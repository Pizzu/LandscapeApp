<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="box_forms">
        <h1 class="title_forms">Edit <%=landscape.name%></h1>
        <div class="content_forms">
        <form action="/landscapes/<%=landscape.id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type= "text" value= "<%=landscape.name%>" name="name">
            </div>
            <div class="form-group">
                <input class="form-control" type= "text" value= "<%=landscape.image%>" name="image">
            </div>
             <div class="form-group">
                <input class="form-control" type= "text" value= "<%=landscape.location%>" name="location">
            </div>
            <div class="form-group">
                <input class="form-control" type= "text" value= "<%=landscape.description%>" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        </div>
      </div>
    </div>
</div>

<% include ../partials/footer %>